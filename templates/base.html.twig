<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <link
      rel="shortcut icon"
      href="{{ asset('img/favicon.png') }}"
      type="image/x-icon"
    />
    <title>{% block title %}Bucket-List{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
    {% block stylesheets %} {% endblock %}{% block javascripts %}
    <script
      src="https://code.jquery.com/jquery-3.6.0.slim.min.js"
      integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI="
      crossorigin="anonymous"
    ></script>
    {% block javascriptshead %}
  </head>
  <body>
    {% set menu = {"Accueil": "app_main","Contact": "app_about_us","Bucket
    List": "app_wish_list"} %}
    <div class="grid-container">
      <header>
        <div class="header-top">
          <div class="first">
            <img
              class="logo"
              src="{{ asset('img/logo.png') }}"
              alt="logo bucket list"
            />
          </div>
          <div class="second">
            <nav>
              <ul>
                {% for key,value in menu %}
                <li>
                  {% if value != "#" %}
                  <a href="{{ path(value) }}">
                    {{ key }}
                  </a>
                  {% else %}
                  <a href="#">
                    {{ key }}
                  </a>
                  {% endif %}
                </li>
                {% endfor %}
              </ul>
            </nav>
          </div>
        </div>
      </header>
      <main>{% block body %}{% endblock %}</main>
      <footer>
        <p>
          &copy; Bucket-List {{"now"|date("Y") }} {#
          <a href="{{ path(app_legal_stuff) }}">Mentions LÃ©gales</a> #}
        </p>
      </footer>
    </div>
    {% block javascriptsbody %} {% endblock %}
  </body>
</html>
